<?xml version="1.0" encoding="UTF-8"?>
<web-app 
	xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
		http://java.sun.com/xml/ns/javaee 
		http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
    version="3.0">
     <servlet>
		<servlet-name>Connexion</servlet-name>
		<servlet-class>controllers.AuthentificationServlet</servlet-class>
	</servlet>
	 <servlet>
		<servlet-name>AjouterActivite</servlet-name>
		<servlet-class>controllers.AjouterActiviteServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Accueil</servlet-name>
		<servlet-class>controllers.AccueilServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CreationProfil</servlet-name>
		<servlet-class>controllers.CreationProfilServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ProfilUtilisateur</servlet-name>
		<servlet-class>controllers.ProfilUtilisateurServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ListerActivite</servlet-name>
		<servlet-class>controllers.ListerActiviteServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>Connexion</servlet-name>
		<url-pattern>/connexion</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AjouterActivite</servlet-name>
		<url-pattern>/ajouterActivite</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Accueil</servlet-name>
		<url-pattern>/accueil</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CreationProfil</servlet-name>
		<url-pattern>/creerProfil</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ProfilUtilisateur</servlet-name>
		<url-pattern>/profil</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ListerActivite</servlet-name>
		<url-pattern>/listerActivite</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>accueil</welcome-file>
	</welcome-file-list>
</web-app>
	